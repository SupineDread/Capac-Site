extends ./newlayout.pug
  
block contenido
  section#section-2.services-section.bg-dark
    .container
      .row
        .col-md-12
          h1 Eventos Pr칩ximos
        .col-md-12
          .row
            each e in eventos
              .modal.fade(id=e.id)
                .modal-dialog
                  .modal-content
                    .modal-header
                      button.close(data-dismiss="modal") &times;
                      h4.modal-title= e.title
                    .modal-body
                      .row
                        .entrada.row(style="margin: 1rem")
                          .col-xs-12
                            img.img-responsive(src=e.img)
                          .col-xs-12
                            strong Informaci칩n:
                            p= e.text
                          .col-xs-12
                            strong Fecha:
                            p= moment(e.date).format('DD/MM/YYYY')
                          .col-xs-12
                            strong Horario:
                            p= e.hourStart + ' - ' + e.hourEnd
                          .col-xs-12
                            strong Donativo:
                            p= '$' + e.donation
                      .modal-footer
                        button.btn.btn-default(data-dismiss="modal") Cerrar
              .col-md-6(style="padding: 1rem")
                .row.evento-container
                  .col-md-12
                    h4.text-center= e.title
                  .col-md-12
                    hr.divider
                  .col-md-12
                    .row
                      .col-xs-6
                        .row
                          .col-xs-12
                            strong Informaci칩n:
                            p !{e.text.length >= 1000 ? e.text.substr(0, 500) : e.text}
                          .col-xs-12
                            strong Fecha:
                            p= moment(e.date).format('DD/MM/YYYY')
                          .col-xs-12
                            strong Horario:
                            p= e.hourStart + ' - ' + e.hourEnd
                          .col-xs-12
                            strong Donativo:
                            p= '$' + e.donation
                          .col-xs-12
                            button.btn.btn-primary(data-toggle="modal", data-target='#'+e.id) Ver m치s
                      .col-xs-6
                        img.img-responsive(src=e.img)
